<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="demo.simple.com.symdssimpledemo.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="0dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/meetingInstanceFileGridRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >


            <EditText
                android:id="@+id/editText"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:background="@drawable/default_edit_box"
                android:textSize="16dp"
                android:paddingLeft="2dp"
                android:paddingTop="7dip"
                android:singleLine="true"
                android:imeOptions="actionDone" />

            <CheckBox
                android:id="@+id/checkBoxActive"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/editText"
                android:checked="false"
                android:paddingBottom="0dip"
                android:paddingLeft="25dip"/>



            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/checkBoxActive"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textSize="15sp"
                android:gravity="left"
                android:text="Refresh" />


            <Button
                android:id="@+id/btnSQLliteManager"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnRefresh"
                android:paddingLeft="25dip"
                android:paddingRight="5dip"
                android:textSize="15sp"
                android:gravity="left"
                android:text="Open SQL Manager" />


        </RelativeLayout>




    </LinearLayout>


</android.support.constraint.ConstraintLayout>
